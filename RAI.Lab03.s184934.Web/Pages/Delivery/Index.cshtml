@page
@model RAI.Lab03.s184934.Web.Pages.Delivery.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].NumberOfPallets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Delivery) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPallets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Model.AvailableSuppliers.Single(s => s.Id.Equals(item.Supplier)).Name
            </td>   
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
