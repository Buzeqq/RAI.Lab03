@page
@model RAI.Lab03.s184934.Web.Pages.Delivery.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Delivery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.NumberOfPallets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.NumberOfPallets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivery.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.Pallets)
        </dt>
        <dd class="col-sm-10">
            <ol>
                @foreach (var pallet in Model.Pallets)
                {
                    <li>@Model.Waters.Single(w => w.Id == pallet.WaterId).Name, size: @pallet.PalletSize</li>
                }
            </ol>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Delivery?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
