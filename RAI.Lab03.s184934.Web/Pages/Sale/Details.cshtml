@page
@model RAI.Lab03.s184934.Web.Pages.Sale.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.SaleQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.SaleQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.SaleEntries)
        </dt>
        <dd class="col-sm-10">
            <ol>
                @foreach (var pallet in Model.SaleEntryDtos)
                {
                    <li>@Model.Waters.Single(w => w.Id == pallet.WaterId).Name, size: @pallet.Quantity</li>
                }
            </ol>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Sale?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
