@page
@model RAI.Lab03.s184934.Web.Pages.Water.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>MineralWater</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Name" class="control-label"></label>
                <input asp-for="MineralWaterDto.Name" class="form-control"/>
                <span asp-validation-for="MineralWaterDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Ph" class="control-label"></label>
                <input asp-for="MineralWaterDto.Ph" class="form-control"/>
                <span asp-validation-for="MineralWaterDto.Ph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" type="file" name="image"/>
                <span asp-validation-for="MineralWaterDto.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Type" class="control-label">Type</label>
                <select asp-for="MineralWaterDto.Type" asp-items="@(new SelectList(Model.AvailableWaterTypes, "Id", "Name"))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Anions" class="control-label">Anions</label>
                <select multiple="multiple" class="multiselect" asp-for="MineralWaterDto.Anions" asp-items="@(new MultiSelectList(Model.AvailableAnions, "Id", "Name"))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Cations" class="control-label">Cations</label>
                <select multiple="multiple" class="multiselect" asp-for="MineralWaterDto.Cations" asp-items="@(new MultiSelectList(Model.AvailableCations, "Id", "Name"))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Producer" class="control-label">Producer</label>
                @if (Model.AvailableProducers.Any())
                {
                    <select asp-for="MineralWaterDto.Producer" asp-items="@(new SelectList(Model.AvailableProducers, "Id", "Name"))">
                    </select>
                }
                else
                {
                    <p>No producers available!</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="MineralWaterDto.Packaging" class="control-label">Packaging</label>
                <select asp-for="MineralWaterDto.Packaging" asp-items="@(new SelectList(Model.AvailablePackaging, "Id", "DisplayInformation"))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $(".multiselect").multiselect({
                templates: {
                    button: '<button type="button" class="multiselect dropdown-toggle btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false"><span class="multiselect-selected-text"></span></button>',
                },
            });
        });
    </script>
}
