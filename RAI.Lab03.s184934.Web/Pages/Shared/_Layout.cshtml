@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RAI.Lab03.s184934.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RAI.Lab03.s184934.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/jquery-multiselect/dist/css/bootstrap-multiselect.min.css" type="text/css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">RAI.Lab03.s184934.Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="dropdown">
                            <button class="nav-item btn dropdown-toggle" type="button" id="dropdownWarehouseMenuButton" 
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Warehouse
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownWarehouseMenuButton">
                                <a class="dropdown-item" asp-area="" asp-page="/Water/Index">Water</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Water/Type/Index">Water type</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Company/Index">Company</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Ion/Index">Ion</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Packaging/Index">Packaging</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <button class="nav-item btn dropdown-toggle" type="button" id="dropdownOrdersMenuButton" 
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Orders
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownOrdersMenuButton">
                                <a class="dropdown-item" asp-area="" asp-page="/Delivery/Index">Delivery</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Sale/Index">Sale</a>
                            </div>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - RAI.Lab03.s184934.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-multiselect/dist/js/bootstrap-multiselect.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
<script>
</script>
</body>
</html>